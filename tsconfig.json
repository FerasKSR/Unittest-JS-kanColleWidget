{
    "compilerOptions": {
        "outDir": "./dest/js",
        "sourceMap": false,
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "lib": ["es6", "es2015", "ES2017", "dom"],
        "types": [
            "jest", "chrome"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/js/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
