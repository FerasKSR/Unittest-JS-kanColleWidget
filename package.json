{
  "name": "kan-colle-widget",
  "version": "3.0.0-alpha.0",
  "description": "『艦これ』をちょっとだけ快適にするやつ",
  "engines": {
    "node": "9.11",
    "npm": "6.4.0"
  },
  "scripts": {
    "build": "webpack -p",
    "start": "webpack -p --watch",
    "lint": "tslint ./src/**/*.ts",
    "test": "jest --watch --coverage",
    "ci": "tslint ./src/**/*.ts && jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": "git+https://github.com/otiai10/kanColleWidget.git",
  "author": "otiai10",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/otiai10/kanColleWidget/issues"
  },
  "homepage": "https://github.com/otiai10/kanColleWidget#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "coveralls": "^3.0.2",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "tests/.*-test\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/v2_backup/"
    ]
  }
}
