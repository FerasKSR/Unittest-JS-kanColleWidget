{
  "name": "kan-colle-widget",
  "version": "3.0.0-alpha.35",
  "description": "『艦これ』をちょっとだけ快適にするやつ",
  "engines": {
    "node": "9.11",
    "npm": "6.4.0"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack -p --watch",
    "version": "node ./scripts/version.js",
    "build": "NODE_ENV=production webpack && rm dest/css/*.js",
    "publish": "node ./scripts/publish.js ./release/kcwidget.zip",
    "announce": "node ./scripts/announce.js",
    "tweet": "node ./scripts/tweet.js",
    "pack": "./scripts/pack.sh",
    "lint": "tslint ./src/**/*.ts",
    "test": "npm run lint && jest",
    "ci": "tslint ./src/**/*.ts && jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": "git+https://github.com/otiai10/kanColleWidget.git",
  "author": "otiai10",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/otiai10/kanColleWidget/issues"
  },
  "homepage": "https://github.com/otiai10/kanColleWidget#readme",
  "devDependencies": {
    "@types/chrome": "0.0.72",
    "@types/jest": "^23.3.1",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "jest": "^23.5.0",
    "jest-canvas-mock": "^1.1.0",
    "jest-cli": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "request-promise": "^4.2.2",
    "sass-loader": "^7.1.0",
    "sinon-chrome": "^2.3.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "twitter": "^1.7.1",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "vue-loader": "^15.4.1",
    "vue-property-decorator": "^7.0.0",
    "vue-template-compiler": "^2.5.17",
    "vue-typescript-import-dts": "^4.0.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/js/*.ts",
      "src/js/Applications/**/*.ts",
      "src/js/Services/**/*.ts"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup/chrome.ts",
      "<rootDir>/tests/setup/image-onload.ts",
      "jest-canvas-mock"
    ],
    "testRegex": "tests/.*-test\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/v2_backup/"
    ]
  },
  "dependencies": {
    "chomex": "^1.0.21",
    "octicons": "^8.1.0",
    "spectre.css": "^0.5.3",
    "vue": "^2.5.17"
  }
}
